{
  "plugins": [
    "prettier-plugin-tailwindcss",
    "@trivago/prettier-plugin-sort-imports"
  ],
  "importOrder": [
    "^react$",
    "^lucide-react$",
    "^@tabler/icons-react$",
    "^@/components(.*)$",
    "^@/lib(.*)$",
    "^@/hooks(.*)$"
  ],
  "tabWidth": 2,
  "trailingComma": "all",
  "semi": true,
  "singleQuote": true,
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
